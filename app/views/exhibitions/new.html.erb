<h4>Add an Exhibition</h4>
<br>
<%= form_for @exhibition do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :artist %>
  <%= f.text_field :artist %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :address %>
  <%= f.text_area :address %><br>

  <%= f.label :start_at %>
  <%= f.date_select :start_at %><br>

  <%= f.label :end_at %>
  <%= f.date_select :end_at %><br>
  <%= f.submit %>
<% end %>