<h1>Add a New Exhibition</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <br>

  <%= form_for @exhibition do |f| %>
  <%= render '/error_messages' %>

  <p><%= f.label :title %>
  <%= f.hidden_field :author_id %>
  <%= f.text_field :name %><br></p>

  <%= f.label :body %>
  <%= f.text_area :description %><br>

  <label>Location:</label><br>

  <%= f.label :street %>
  <%= f.text_field :street_address %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.text_field :state %><br>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>
    <br>

  <label>Dates:</label><br>
  <%= f.label :start_at %>
  <%= f.date_select :start_at %><br>

  <%= f.label :end_at %>
  <%= f.date_select :end_at %>
  <br>

  <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

<%= link_to 'Back to exhibition', exhibitions_path%>